{
  "manifest_version": 3,
  "name": "ChatClipper",
  "version": "1.2",
  "description": "It provides a function to copy conversations in ChatGPT as images to the clipboard",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content_script.js",
        "html2canvas.js"
      ]
    }
  ]
}